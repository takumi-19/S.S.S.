%body
  .AccountPage
    .AccountPage__container.LogIn
      .AccountPage__title
        .AccountPage__title--top
          %h1 S.S.S.
          .AccountPage__title--topRight
            %h4 Soccer
            %h4 Supporter's
            %h4 Stadium
        .AccountPage__title--bottom
          %h3 enjoy your soccer life
      .AccountPage__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          #error_explanation
            - flash.each do |key, value|
              = content_tag :div, value, class: key
          .FormFields
            .FormField
              .FormField__input--normal.Email
                = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .FormField
              .FormField__input--normal.Password
                = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
            .FormField
              .actions
                = f.submit "ログイン", class: 'Button LoginButton'
      .SignupButton
        %h3 アカウントをお持ちでないですか？
        = render "devise/shared/links"