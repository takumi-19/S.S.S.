%body
  .AccountPage
    .AccountPage__container.SignUp
      .AccountPage__title
        %h2 新規アカウントの作成
      .AccountPage__form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .FormFields
            .FormField
              .FormField__input--normal
                = f.text_field :name, autofocus: true, placeholder: "ユーザーネーム"
            .FormField
              .FormField__input--normal
                = f.email_field :email, placeholder: "メールアドレス"
            .FormField
              .FormField__input--normal
                = f.password_field :password, autocomplete: "off", placeholder: "パスワード(英数字8文字以上)"
            .FormField
              .FormField__input--normal
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認用パスワード"
            .FormField
              .FormField__favoriteTeam
                %h4 所属クラブ
                .FormField__favoriteTeam--line
                  - Team.find(1,2,3,4,5,6,7,8,9).each do |team|
                    %label
                      = f.radio_button(:team_id, team.id)
                      = image_tag team.team_logo
                .FormField__favoriteTeam--line
                  - Team.find(10,11,12,13,14,15,16,17,18).each do |team|
                    %label
                      = f.radio_button(:team_id, team.id)
                      = image_tag team.team_logo
          = f.submit "アカウントを作成", class: 'Button CreateButton'